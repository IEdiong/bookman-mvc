@model BookViewModel

@{
    ViewData["Title"] = "Add New Book";
}

<div class="mt-5">
    <h1>Add a new book</h1>
    <form asp-controller="Book" asp-action="Create" method="Post" role="form">
        <div class="mb-3 col-md-6">
            <label asp-for="@Model.Name" class="form-label"></label>
            <input class="form-control" asp-for="@Model.Name" placeholder="How to Walk with God">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-md-6">
            <label asp-for="@Model.Author" class="form-label"></label>
            <input class="form-control" asp-for="@Model.Author" placeholder="Rick Joyner">
        </div>
        <div class="mb-3 col-md-6">
            <label asp-for="@Model.Year" class="form-label"></label>
            <input type="date" class="form-control" asp-for="@Model.Year">
        </div>
        <div class="mb-3 col-md-6">
            <label asp-for="@Model.Price" class="form-label">Price (₦)</label>
            <input type="number" class="form-control" asp-for="@Model.Price" placeholder="5000">
        </div>
        <div class="mb-3 col-md-6">
            <label asp-for="@Model.Description" class="form-label"></label>
            <textarea asp-for="@Model.Description" class="form-control" rows="3"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Add Book</button>
    </form>
</div>