@model BookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<div class="mt-5">
    <h1>Edit Book</h1>
    <form asp-controller="Book" asp-action="Edit" method="Post" role="form" enctype="multipart/form-data">
        @if (Model != null)
        {
            <input asp-for="@Model.Id" type="hidden" />
            <div class="mb-3 col-md-6">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Name" value="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="@Model.Author" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Author" value="@Model.Author">
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="@Model.Year" class="form-label"></label>
                <input type="number" class="form-control" asp-for="@Model.Year" value="@Model.Year">
                <span asp-validation-for="@Model.Year" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="@Model.Price" class="form-label">Price (₦)</label>
                <input type="number" class="form-control" asp-for="@Model.Price" value="@Model.Price">
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="@Model.Description" class="form-label"></label>
                <textarea asp-for="@Model.Description" class="form-control" rows="3" value="@Model.Description"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label for="formFile" class="form-label">Image of the book</label>
                <input asp-for="@Model.ImageFile" class="form-control" type="file" id="formFile">
            </div>
        }


        <button class="btn btn-primary" type="submit">Confirm Edit</button>
    </form>
</div>